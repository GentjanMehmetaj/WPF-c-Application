                    <DataGridTextColumn Header="Tvsh" Width="100" Binding="{Binding tax_rate_id}"></DataGridTextColumn>
                </DataGrid.Columns>-->
            </DataGrid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0 10 10 10">
                    <Button Name="btn_choose" Content="Choose" Margin="0 5" Click="Btn_choose_Click" />
                    <TextBlock Text="Select work sheet" Margin="0 5"/>

                </StackPanel>
                <StackPanel Grid.Column="1" Margin="0 10">
                    <TextBox Name="txt_path" Margin="0 5" />
                    <ComboBox Name="cmb_sheets" Margin="0 5"/>

                </StackPanel>

            </Grid>
            <Button Name="btn_load" Content="Load File Excel" Click="Btn_load_Click"/>
        </StackPanel>
    </Border>
</Window>
