                    <DataGridTextColumn Header="Kodi" Width="40" Binding="{Binding item_code}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Artikulli" Width="100" Binding="{Binding name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Barkodi" Width="100" Binding="{Binding barcode}"></DataGridTextColumn>
